extends layout

block content
    //- Set default values for fields
    - const title = !!book ? book.title : "";
    - const author = !!book ? book.author : "";
    - const genre = (!!book && !!book.genre) ? book.genre : ""
    - const year = (!!book && !!book.year) ? book.year : "";

    block form-heading

    form(method="post")
        div
            label(for="title") Title
            input#title(type="text", name="title", value=title)

        div
            label(for="author") Author
            input#author(type="text", name="author", value=author)

        div
            label(for="genre") Genre
            input#genre(type="text", name="genre", value=genre)

        div
            label(for="year") Year
            input#year(type="text", name="year", value=year)

        div
            block form-buttons
                a(href="/books") Cancel
                button(type="submit") Submit