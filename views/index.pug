extends partials/layout

block content
    h1= "Books"
    p
        a.button(href="/books/new") Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href=`/books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year

    ul.pages
        span Pages:
        each page in pages
            li
                - const pageIsSelected = page === selectedPage
                if pageIsSelected
                    a.button.selected(href=`/books?page=${page}`)= page
                else
                    a.button(href=`/books?page=${page}`)= page